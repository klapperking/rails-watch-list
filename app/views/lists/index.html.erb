<%= render('lists/components/banner') %>

<%= simple_form_for(:search, url: movies_path, method: :get, html: {class: "movie-search"}) do |f| %>
  <div class="search-form-control form-group float-right">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Search for a movie..." />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>

<div class="card-container lists">
  <% @lists.each do |list| %>
    <%= link_to(list.name, list_path(list), class: "card list") %>
  <% end %>
</div>

